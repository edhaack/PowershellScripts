<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>Sort</Title>
      <Shortcut>sort</Shortcut>
      <Description>Sort objects in a pipeline</Description>
      <Author>Quest Software, Inc.</Author>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
        <SnippetType>SurroundsWith</SnippetType>
      </SnippetTypes>
    </Header>
    <Snippet>
      <Declarations>
        <Literal>
          <ID>Property</ID>
          <Default>Name</Default>
          <ToolTip>An array of one or more properties that you want to sort on</ToolTip>
        </Literal>
      </Declarations>
      <Code Language="powershell">
        <![CDATA[$selected$ | Sort-Object -Property $Property$$end$]]>
      </Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>