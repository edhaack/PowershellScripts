<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>Call (ScriptBlock)</Title>
      <Shortcut>callsb</Shortcut>
      <Description>Insert the PowerShell equivalent of the VBScript Call statement when using a script block</Description>
      <Author>Quest Software, Inc.</Author>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
        <SnippetType>SurroundsWith</SnippetType>
      </SnippetTypes>
    </Header>
    <Snippet>
      <Declarations>
        <Literal>
          <ID>scriptBlock</ID>
          <Default>$scriptBlock</Default>
          <ToolTip>The ScriptBlock to execute</ToolTip>
        </Literal>
        <Literal>
          <ID>firstParameter</ID>
          <Default>$firstParameter</Default>
          <ToolTip>The first parameter to pass to the ScriptBlock</ToolTip>
        </Literal>
        <Literal>
          <ID>secondParameter</ID>
          <Default>$secondParameter</Default>
          <ToolTip>The second parameter to pass to the ScriptBlock</ToolTip>
        </Literal>
      </Declarations>
      <Code Language="powershell">
        <![CDATA[$scriptBlock$ = {
	param(
		$firstParameter$,
		$secondParameter$
	)
	$selected$$end$
}

& $scriptBlock$ '1stValue' 2]]>
      </Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>
