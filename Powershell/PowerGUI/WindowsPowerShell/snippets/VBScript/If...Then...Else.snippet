<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>If...Then...Else</Title>
      <Shortcut>ifthenelse</Shortcut>
      <Description>Insert the PowerShell equivalent of the VBScript If...Then...Else statement</Description>
      <Author>Quest Software, Inc.</Author>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
        <SnippetType>SurroundsWith</SnippetType>
      </SnippetTypes>
    </Header>
    <Snippet>
      <Declarations>
        <Literal>
          <ID>condition</ID>
          <Default>$true</Default>
          <ToolTip>Conditional expression to evaluate</ToolTip>
        </Literal>
      </Declarations>
      <Code Language="powershell">
        <![CDATA[if ($condition$) {
	$selected$$end$
} else {
}]]>
      </Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>
