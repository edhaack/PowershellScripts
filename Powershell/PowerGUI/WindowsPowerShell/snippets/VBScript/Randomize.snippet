<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>Randomize</Title>
      <Shortcut>randomize</Shortcut>
      <Description>Insert the PowerShell equivalent of the VBScript Randomize statement</Description>
      <Author>Quest Software, Inc.</Author>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
    </Header>
    <Snippet>
      <Declarations>
        <Literal>
          <ID>result</ID>
          <Default>$result</Default>
          <ToolTip>Variable to store the result</ToolTip>
        </Literal>
        <Literal>
          <ID>generator</ID>
          <Default>$generator</Default>
          <ToolTip>Variable to hold the random number generator object</ToolTip>
        </Literal>
      </Declarations>
      <Code Language="powershell">
        <![CDATA[$generator$ = New-Object -TypeName System.Random
$result$ = $generator$.NextDouble()$end$]]>
      </Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>
